{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "date-of-birth",
  "type": "object",
  "properties": {
    "dob_provided": {
      "type": [ "integer", "null" ],
      "enum": [ 0, 1, null ]
    },
    "dob-day": {
      "type": "integer",
      "minimum": 1,
      "maximum": 31
    },
    "dob-month": {
      "type": "integer",
      "minimum": 1,
      "maximum": 12
    },
    "dob-year": {
      "type": "integer",
      "minimum": 1000,
      "maximum": 9999
    },
    "dob": {
      "type": "string",
      "format": "date-time"
    }
  }
}
